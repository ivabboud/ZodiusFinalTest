<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fillViewport="true"
        android:paddingBottom="?attr/actionBarSize"
        android:paddingTop="45dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/side_linear"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/horo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorAccent">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/aries"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/horo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/taurus"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/gemini"
                    android:tint="@color/white_f5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/cancer"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/leo"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/virgo"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon7"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/libra"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon8"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/scorpio"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon9"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/sagittarius"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon10"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/capricorn"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon11"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/aquarius"
                    android:tint="#fafafa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/horo12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon12"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/pisces"
                    android:tint="#fafafa" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/colorPrimary"
            app:tabIndicatorColor="#f5f5f5"
            app:tabIndicatorHeight="3dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#fff"
            app:tabTextColor="@color/colorAccent" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="#f5f5f5" />

    </LinearLayout>

</LinearLayout>